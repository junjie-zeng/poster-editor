.make-poster {
  position: relative;
  min-height: 200rpx;
}
.make-poster .poster > image {
  vertical-align: bottom;
  width: 100%;
}
.make-poster .drag movable-area {
  height: 100%;
  width: 100%;
  position: absolute;
  top: 0;
  bottom: 0;
}
.make-poster .drag movable-area movable-view {
  position: absolute;
  height: auto;
  width: auto;
}
.make-poster .drag movable-area .text {
  height: auto;
  width: auto;
}
.make-poster .drag movable-area .img > image {
  width: 100%;
  height: 100%;
}
.make-poster .add-poster {
  position: fixed;
  left: 50%;
  top: 40%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  height: 200rpx;
  width: 200rpx;
  background: pink;
  text-align: center;
  line-height: 200rpx;
  font-size: 60rpx;
  color: #C0C0C0;
}
