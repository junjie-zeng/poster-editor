.picture-library-popup .library-title {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  padding: 0 15rpx ;
  height: 80rpx;
  background: #1274e7;
  line-height: 80rpx;
  color: #fff;
}
.picture-library-popup .library-box {
  padding: 10rpx;
}
.picture-library-popup .library-box .item {
  float: left;
  width: 47%;
  height: 400rpx;
  border: solid 2px rgba(0, 0, 0, 0.05);
  padding: 40rpx 0;
  background: #fff;
  margin: 10rpx 5rpx;
}
.picture-library-popup .library-box .item image {
  width: 100%;
  height: 100%;
}
.picture-library-popup .library-box .active {
  border: solid 2px #1274e7;
}
.picture-library-popup .library-btn {
  padding: 10rpx 20rpx;
  margin-top: 30rpx;
  margin-top: 15rpx;
}
.picture-library-popup .library-btn button {
  width: 180rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: inline-block;
  color: #fff;
  border: none;
  outline: none;
  font-size: 32rpx;
}
.picture-library-popup .library-btn .upload {
  width: 200rpx;
  background: #00c853;
}
.picture-library-popup .library-btn ._ok,
.picture-library-popup .library-btn .cancel {
  float: right;
}
.picture-library-popup .library-btn ._ok {
  background: #1274e7;
}
.picture-library-popup .library-btn .cancel {
  background: #e1e1e1;
  margin-right: 15rpx;
}

