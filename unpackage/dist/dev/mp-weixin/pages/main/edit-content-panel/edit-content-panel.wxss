.edit-content-panel {
  background: #333435;
  height: 100%;
  color: #aaabac;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.edit-content-panel .th {
  height: 80rpx;
  width: 100%;
  background: #1274e7;
  color: #fff;
  font-size: 26rpx;
  text-align: center;
  line-height: 80rpx;
}
.edit-content-panel .th .close {
  display: inline-block;
  float: right;
  margin-right: 20rpx;
  font-size: 32rpx;
}
.edit-content-panel .td {
  padding: 10rpx 10rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.edit-content-panel .td .item {
  -webkit-box-flex: 40%;
  -webkit-flex: 40%;
          flex: 40%;
  height: 100px;
  text-align: center;
  margin: 10rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  margin-bottom: 10rpx;
  background: #444546;
  font-size: 28rpx;
}
.edit-content-panel .td .item .icon {
  -webkit-box-flex: 2;
  -webkit-flex: 2;
          flex: 2;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: end;
  -webkit-align-items: flex-end;
          align-items: flex-end;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  font-size: 88rpx;
}
.edit-content-panel .td .item .text {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: start;
  -webkit-align-items: flex-start;
          align-items: flex-start;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.edit-content-panel .setting .row {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  min-height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  width: 100%;
}
.edit-content-panel .setting .row .tip {
  width: 35px;
}
.edit-content-panel .setting .row .opertion {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  padding-left: 10rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.edit-content-panel .setting .row .opertion .slider {
  position: relative;
  width: 100%;
}
.edit-content-panel .setting .row .opertion .slider uni-slider,
.edit-content-panel .setting .row .opertion .slider slider {
  margin: 0 10rpx;
  padding-right: 40rpx;
}
.edit-content-panel .setting .row .opertion .slider > text {
  position: absolute;
  top: 0;
  right: 2px;
}
.edit-content-panel .setting .row .opertion .picker {
  width: 100%;
  height: 65rpx;
  line-height: 65rpx;
  text-align: center;
  background: #292929;
  border-radius: 3px;
}
.edit-content-panel .setting .row .opertion .sidebar {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  height: 65rpx;
  line-height: 65rpx;
  border-radius: 3px;
  overflow: hidden;
}
.edit-content-panel .setting .row .opertion .sidebar > view {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  text-align: center;
  background: #555657;
}
.edit-content-panel .setting .row .opertion .sidebar > view:nth-child(2) {
  border-left: solid 1px #454545;
  border-right: solid 1px #454545;
}
.edit-content-panel .setting .row .opertion .sidebar > .active {
  background: #1274e7;
  color: #fff;
}
.edit-content-panel .setting .row .opertion .textarea {
  width: 100%;
  overflow: hidden;
  border-radius: 3px;
  margin-top: 10rpx;
}
.edit-content-panel .setting .row .opertion .textarea > textarea {
  width: 100%;
  height: 200rpx;
  background: #444546;
  padding: 10rpx;
}
.edit-content-panel .setting .row .img-box {
  position: relative;
  width: 210px;
}
.edit-content-panel .setting .row .img-box image {
  width: 100%;
}
.edit-content-panel .setting .row .img-box > view {
  position: absolute;
  border-radius: 5px;
  top: 10px;
  right: 10px;
  width: 80rpx;
  height: 60rpx;
  background: #00c853;
  color: #fff;
  text-align: center;
  line-height: 60rpx;
}
.edit-content-panel .setting .row .img-box > view .iconfont {
  font-size: 50rpx;
}
.edit-content-panel .setting .row .btn-wrap {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-top: 20rpx;
}
.edit-content-panel .setting .row .btn-wrap > view {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  height: 65rpx;
  line-height: 65rpx;
  text-align: center;
  color: #fff;
  border-radius: 5rpx;
}
.edit-content-panel .setting .row .btn-wrap .btn-ok {
  background: #00c853;
  margin-right: 5rpx;
}
.edit-content-panel .setting .row .btn-wrap .btn-cancel {
  background: #555657;
  margin-left: 5rpx;
}

