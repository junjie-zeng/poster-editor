.create-poster-popup {
  position: fixed;
  bottom: 10px;
  left: 10px;
  top: 55px;
  right: 10px;
  background: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  top: 10px;
}
.create-poster-popup .show-poster {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  background: #494a4b;
}
.create-poster-popup .show-poster image {
  width: 100%;
}
.create-poster-popup .save-poster {
  padding: 10rpx 20rpx;
  height: 300rpx;
  text-align: center;
}
.create-poster-popup .save-poster .save-tips {
  font-size: 32rpx;
  color: #aaa1a1;
}
.create-poster-popup .save-poster .save-btn > button {
  margin-top: 20rpx;
  outline: none;
  color: #fff;
  font-size: 32rpx;
}
.create-poster-popup .save-poster .save-btn button:nth-child(1) {
  background: #007aff;
}
.create-poster-popup .save-poster .save-btn button:nth-child(2) {
  border: solid 1px #007aff;
  color: #007aff;
}
.popup-wrap {
  top: 10px;
}

