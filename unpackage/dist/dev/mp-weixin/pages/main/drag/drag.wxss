.drag-poster {
  position: relative;
  min-height: 200rpx;
}
.drag-poster .poster > image {
  vertical-align: bottom;
  width: 100%;
}
.drag-poster .drag movable-area {
  height: 100%;
  width: 100%;
  position: absolute;
  top: 0;
  bottom: 0;
}
.drag-poster .drag movable-area movable-view {
  position: absolute;
  height: auto;
  width: auto;
}
.drag-poster .drag movable-area .text {
  height: auto;
  width: auto;
}
.drag-poster .drag movable-area .img > image {
  width: 100%;
  height: 100%;
}

